<modification>
	<id><![CDATA[Live-Chat]]></id>
	<version><![CDATA[1.1]]></version>
	<opencart><![CDATA[1.5.6.4]]></opencart>
	<vqmver><![CDATA[2.5.1]]></vqmver>
	<author><![CDATA[Oleh Vasylyev  http://tobiknet.com/index.php?route=information/contact ]]></author>
		
	<file path="admin/controller/setting/" name="setting.php">
		<operation info="save online_chat to DB">
			<search position="after" ><![CDATA[
				$this->data['tab_server'] = $this->language->get('tab_server');
			]]></search>
			<add><![CDATA[

				// Online-Chat code

				if (isset($this->request->post['config_online_chat'])) {
					$this->data['config_online_chat'] = $this->request->post['config_online_chat'];
				} else {
					$this->data['config_online_chat'] = $this->config->get('config_online_chat');
				}
				
			]]></add>
		</operation>
	</file>
	
	<file path="admin/view/template/setting/" name="setting.tpl">
		<operation info="ADD oonline-chat into Server TAB IN SETTINGS">
			<search position="before" ><![CDATA[
				<td><?php echo $entry_robots; ?></td>
			]]></search>
			<add><![CDATA[
				  <td>Live Chat:<br /><span class="help">Copy the code of Your Live Chat and insert it to the input area (Floating Button or On-Site Chat Overlay)</span></td>
				  <td><textarea name="config_online_chat" cols="40" rows="5"><?php echo $config_online_chat; ?></textarea></td>
				</tr>                    
				<tr>			
			]]></add>
		</operation>
	</file>
	

	<file path="catalog/controller/common/" name="footer.php">
		<operation>
			<search position="after" ><![CDATA[
				$this->data['text_newsletter'] = $this->language->get('text_newsletter');
			]]></search>
			<add><![CDATA[
			
				$this->data['online_chat'] = html_entity_decode($this->config->get('config_online_chat'), ENT_QUOTES, 'UTF-8');
			
			]]></add>
		</operation>
	</file>
	
	<file path="catalog/view/theme/*/template/common/" name="footer.tpl">
		<operation info="echo online-chat in footer before closing body">
			<search position="before" ><![CDATA[
				</body>
			]]></search>
			<add><![CDATA[
					<?php
						if (!empty($online_chat)){
								echo $online_chat;
						} else {}
					?>
			]]></add>
		</operation>
	</file>

</modification>